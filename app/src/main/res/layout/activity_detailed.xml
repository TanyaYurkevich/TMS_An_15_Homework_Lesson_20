<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_main"
    tools:context="com.example.tms_an_15_homework_lesson_20.DetailedActivity">
    <EditText
        android:id="@+id/dt_date"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="15"
        android:inputType="date"
        android:hint="@string/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dt_title"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:ems="15"
        android:hint="@string/title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dt_date" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dt_text"
        android:layout_width="399dp"
        android:layout_height="457dp"
        android:ems="15"
        android:hint="@string/text"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dt_title" />


</androidx.constraintlayout.widget.ConstraintLayout>